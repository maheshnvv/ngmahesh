{
  "name": "ngmahesh",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 3000",
    "build": "ng build",
    "build:lib": "ng build ng-osm-map",
    "test": "ng test",
    "test:lib": "ng test ng-osm-map",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint",
    "publish:lib": "cd dist/ng-osm-map && npm publish --access public",
    "install-local": "npm link ./dist/ng-osm-map",
    "install-hooks": "bash install-git-hooks.sh",
    "install-hooks:win": "install-git-hooks.bat",
    "test-commit": "bash test-commit-message.sh",
    "validate-commit": "node -e \"const msg=process.argv[1]; const valid=/\\[(fix|feat|feature|upgrade|major|breaking|docs|style|refactor|perf|test|chore)\\]/.test(msg); if(!valid){console.error('❌ Invalid commit message format. Use [keyword] format.'); process.exit(1);} console.log('✅ Valid commit message');\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@ngmahesh/ng-osm-map": "^1.1.0",
    "@types/leaflet": "^1.9.20",
    "leaflet": "^1.9.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.20",
    "@angular/cli": "^18.2.20",
    "@angular/compiler-cli": "^18.2.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.2.0",
    "typescript": "~5.5.2"
  }
}
